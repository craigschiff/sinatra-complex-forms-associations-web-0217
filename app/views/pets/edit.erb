<h1>Update Pet</h1>

<form action='pets/<%= @pet.id %>' method="post">
  <label>Name: </label>
  <input type="text" name="pet[name]" value="<%= @pet.name %>">
  <br /><br />
  <% Owner.all.each do |owner| %>
  <label>Owner: </label>
  <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" <%= 'checked' if @pet.owner_id == owner.id %>><%= owner.name %></input>
  <% end %>

  <label>Or add new owner below:</label>
  <input type="text" name="owner[name]" />

  <input type="submit" value="update" />

</form>
